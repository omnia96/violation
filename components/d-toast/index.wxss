.container{
    width: 100vw;
    /* background-color: white; */
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.content{
    max-width: 80vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color:#fff;
    border-radius: 2vw;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16),0 3px 6px rgba(0, 0, 0, 0.23);
    padding: 5vw;
}
.toast{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.toast-message{
    margin-top: 1vw;
    font-size: 14px;
    max-width: 40vw;
    overflow: hidden;
    text-overflow:ellipsis;
}
.toast-message-wrap{
    font-size: 14px;
    max-width: 40vw;
    word-break: break-all;
    text-align: center;
}
@keyframes fade-in{
    from{
        filter: blur(5px);
        opacity:0;
    }
}
@keyframes fade-out{
    to{
        filter: blur(5px);
        opacity:0;
    }
}