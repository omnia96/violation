.container{
    width: 100vw;
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.content{
    max-width: 80vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 2vw;
    background-color: white; 
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16),0 3px 6px rgba(0, 0, 0, 0.23);
    padding: 5vw;
}
.items{
    color: #9e9e9e;
}
.items:hover{
    color: #2196f3;
}
.items .title{
    font-size: 12px;
    
}
.items input{
    border-bottom:1px solid #9e9e9e;
    color: #9e9e9e;
    width: 80vw;
    height: 8vw;
}
.items input:hover{
    border-bottom:1px solid #2196f3;
}
.buttons{
    width: 80vw;
    height: 10vw;
    padding-top: 2vw;
    display: flex;
    justify-content: center;
    align-items: center;
}
.button{
    margin-left: 1vw;
    margin-right: 1vw;
    height:8vw;
    width:50vw;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 16px;
    border-radius: 1vw;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16),0 3px 6px rgba(0, 0, 0, 0.23);
}
.button:active{
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.16),0 1px 2px rgba(0, 0, 0, 0.23);
}
.textNoWrap{
    max-width: 80vw;
    font-size: 16px;
    overflow: hidden;
    text-overflow:ellipsis;
}
.text{
    max-width: 80vw;
    font-size: 16px;
    
    word-break: break-all;
    display: flex;
    align-items: center;
    text-align: center;
}
@keyframes fade-in{
    from{
        filter: blur(5px);
        opacity:0;
    }
}
@keyframes fade-out{
    to{
        filter: blur(5px);
        opacity:0;
    }
}