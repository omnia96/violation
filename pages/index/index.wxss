@import "../../fonts/awesome.wxss";
.container{
    color: white;
}
.container{
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}
.header{
    width: 100vw;
    height: 30vw;
    background: #00a4f4;
    border-radius: 0 0 7vw 7vw;
    position: fixed;
    z-index: -1;
}
.icon{
    /* font-size: 10vw; */
    font-size: 8vw;
    width: 10vw;
    height: 10vw;
    display: flex;
    justify-content: center;
    align-items: center;
}
.title{
    font-size: 16px;
    line-height: 16px;
}
.subtitle{
    font-size: 14px;
}
.userCard{
    width: 80vw;
    background-image: linear-gradient(-90deg, #9EFBD3 0%, #57E9F2 48%, #45D4FB 100%);
    border-radius: 1vw;
    padding: 5vw;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top: 20vw;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
}
.carCard{
    width: 80vw;
    background-image: linear-gradient(-90deg, #9EFBD3 0%, #57E9F2 48%, #45D4FB 100%);
    border-radius: 1vw;
    padding: 5vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
    margin-top: 2vw;
}
.carCard .info{
    font-size: 16px;
}
.carCard .info .infoItem{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
}
.carCard .info .infoItem .title{
    width: 20vw;
    color: #9e9e9e;
    font-size: 14px;
}
.carCard .info .infoItem .content{
    width: 50vw;
    font-size: 14px;
}

