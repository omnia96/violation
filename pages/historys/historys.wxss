.container{
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}
.header {
	width: 100vw;
	height: 30vw;
  /* min-height: 25vw; */
	background-color: #00a4f4;
	border-radius: 0vw 0vw 7vw 7vw;
  position:fixed;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}

.placeholder_header{
  height: 62vw;
}
.content{
  width: 90vw;
  /* height: 65vh; */
  background-color: #f5f5f5;
  position: fixed;
  top: 10vw;
  bottom: 55px;
  border-radius: 1vw;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}
.courier-infor-list {
	width: 90vw;
	/* height: 30vw; */
	background-color: #ffffff;
	border-radius: 1vw;
  margin-bottom: 2vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}
.courier-infor-list-header{
  width: 85vw;
  height: 13vw;
  display: flex;
  justify-content: start;
  align-items: center;
}
.courier-infor-list-header-title{
  width: 75vw;
  display: flex;
  justify-content: start;
  align-items: center;
}
.delete{
  display: flex;
  justify-content: end;
  align-items: center;
  color: red;
  font-size: 3vw;
}
.courier-com{
  font-size: 4vw;
  font-weight: bold;
  margin-left: 1vw;
  margin-right: 1vw;
}
.courier-nu{
  font-size: 4vw;
  font-weight: bold;
  margin-left: 1vw;
  margin-right: 1vw;
}
.courier-infor-list-content {
	width: 85vw;
	height: 15vw;
	background-color: #f5f5f5;
	border-radius: 1vw;
  display: flex;
  justify-content: start;
  align-items: center;
}
.courier-lastInfo{
  font-size: 3vw;
  margin-left: 2vw;
  margin-right: 2vw;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.ad-bar{
  position: fixed;
  bottom: 50px;
  width: 100%;
}